<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F9"
    tools:context=".InfoFoodActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <Toolbar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:navigationIcon="@drawable/icon_back"
            android:layout_marginLeft="41dp"/>
        <Toolbar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:navigationIcon="@drawable/icon_heart_item"
            android:layout_marginLeft="340dp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imginfoitem"
        android:layout_width="241.21dp"
        android:layout_height="241.21dp"
        android:src="@drawable/img_info_item"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/nameitem"
        android:layout_width="318dp"
        android:layout_height="52dp"
        android:text="Veggie tomato mix"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="28sp"
        android:lineHeight="33.41dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/infoprice"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="N1,900"
        android:fontFamily="sans-serif"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:lineHeight="26.25dp"
        android:textAlignment="center"
        android:textColor="#FA4A0C"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery info"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="17sp"
        android:lineHeight="20.29dp"
        android:textColor="#000000"
        android:layout_marginStart="53dp"/>
    <TextView
        android:layout_width="297dp"
        android:layout_height="77dp"
        android:text="Delivered between monday aug and thursday 20 from 8pm to 91:32 pm"
        android:fontFamily="sans-serif"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:lineHeight="20.83dp"
        android:textColor="#000000"
        android:letterSpacing="0.02"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return policy"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="17sp"
        android:lineHeight="20.29dp"
        android:textColor="#000000"
        android:layout_marginStart="53dp"/>
    <TextView
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:text="All our foods are double checked before leaving our stores so by any case you found a broken food please contact our hotline immediately."
        android:fontFamily="sans-serif"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:lineHeight="20.83dp"
        android:textColor="#000000"
        android:letterSpacing="0.02"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_30"
        app:backgroundTint="@null"
        android:text="Add to cart"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="17sp"
        android:lineHeight="20.29dp"
        android:textColor="#F6F6F9"
        android:layout_gravity="center"/>

</LinearLayout>