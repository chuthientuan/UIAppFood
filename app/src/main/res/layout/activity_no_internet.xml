<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F8"
    android:gravity="center"
    tools:context=".activities.NoInternetActivity">

    <ImageView
        android:layout_width="133.29dp"
        android:layout_height="120.07dp"
        android:src="@drawable/icon_internet"/>
    <TextView
        android:layout_width="320dp"
        android:layout_height="33dp"
        android:text="No internet Connection"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="28sp"
        android:lineHeight="33.41dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:text="Your internet connection is currently
not available please check or try again."
        android:fontFamily="sans-serif"
        android:textFontWeight="400"
        android:textSize="17sp"
        android:lineHeight="20.29dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/tryinternet"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_30"
        app:backgroundTint="@null"
        android:text="Try again"
        android:fontFamily="sans-serif"
        android:textFontWeight="600"
        android:textSize="17sp"
        android:lineHeight="20.29dp"
        android:textAlignment="center"
        android:layout_marginTop="55dp"
        android:textColor="#F6F6F9"/>

</LinearLayout>